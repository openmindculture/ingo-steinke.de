{
    "name": "ingo-steinke.de",
    "version": "3.4.5",
    "description": "website about web developer Ingo Steinke",
    "main": "index.html",
    "scripts": {
        "eslint": "eslint src",
        "stylelint": "stylelint src/*.css src/_includes/*.css",
        "build": "npm run eslint && npm run stylelint && npm run build:de && npm run build:en",
        "build:de": "eleventy --config .eleventy.de.js && postcss src/*.css --dir dist && babel src/js -d dist/js",
        "build:en": "eleventy --config .eleventy.en.js && postcss src/*.css --dir dist_en && babel src/js -d dist_en/js",
        "codeceptjs": "codeceptjs run --steps",
        "codeceptjs:headless": "HEADLESS=true codeceptjs run --steps",
        "codeceptjs:ui": "codecept-ui --app",
        "codeceptjs:demo": "codeceptjs run --steps -c node_modules/@codeceptjs/examples",
        "codeceptjs:demo:headless": "HEADLESS=true codeceptjs run --steps -c node_modules/@codeceptjs/examples",
        "codeceptjs:demo:ui": "codecept-ui --app  -c node_modules/@codeceptjs/examples",
        "dev": "npm run serve",
        "serve": "npx http-server dist -p 1974 --cors &",
        "pretest": "npm run build && npm run serve",
        "test": "npm run codeceptjs",
        "posttest": "pkill -f http-server",
        "unserve": "pkill -f http-server"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/openmindculture/ingo-steinke.de.git"
    },
    "author": "Ingo Steinke",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/openmindculture/ingo-steinke.de/issues"
    },
    "homepage": "https://github.com/openmindculture/ingo-steinke.de#readme",
    "devDependencies": {
        "@11ty/eleventy": "^2.0.0",
        "@babel/cli": "^7.18.10",
        "@babel/core": "^7.18.10",
        "@babel/preset-env": "^7.18.10",
        "@codeceptjs/configure": "^1.0.0",
        "@testomatio/reporter": "^1.2.0",
        "autoprefixer": "^10.2.5",
        "babel-preset-minify": "^0.5.2",
        "check-tests": "^0.8.22",
        "clean-css": "^5.3.1",
        "codeceptjs": "^3.5.0",
        "cssnano": "^6.0.0",
        "eslint": "^8.6.0",
        "html-minifier": "^4.0.0",
        "http-server": "^14.1.1",
        "playwright": "^1.27.1",
        "postcss": "^8.4.35",
        "postcss-cli": "^11.0.0",
        "postcss-custom-properties": "^13.3.0",
        "postcss-custom-selectors": "^7.1.0",
        "postcss-import": "^16.0.0",
        "precss": "^4.0.0",
        "puppeteer": "^22.0.0",
        "stylelint": "^16.2.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-standard": "^36.0.0"
    },
    "dependencies": {
        "codeceptjs-resemblehelper": "^1.9.6"
    }
}
